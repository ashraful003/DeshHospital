<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_20"
    android:background="@color/black_200">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/layout_80"
        android:layout_height="@dimen/layout_80"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_35"
        android:src="@drawable/ic_human"/>
    <TextView
        android:id="@+id/memberName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_8"
        android:textSize="@dimen/text_size_15"
        android:layout_marginLeft="@dimen/margin_36"
        android:text="@string/member_name"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/memberNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_3"
        android:layout_marginLeft="@dimen/margin_36"
        android:textSize="@dimen/text_size_17"
        android:text="@string/member_name"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/memberId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_3"
        android:textSize="@dimen/text_size_15"
        android:layout_marginLeft="@dimen/margin_36"
        android:layout_marginTop="@dimen/margin_12"
        android:text="@string/nric_passport_no"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/memberIdTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_8"
        android:textSize="@dimen/text_size_17"
        android:layout_marginLeft="@dimen/margin_36"
        android:text="@string/member_name"
        android:textColor="@color/colorPrimary"/>
</LinearLayout>